{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "esnext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "include": ["**/*.ts"],
    "exclude": ["dist", "node_modules"]
}